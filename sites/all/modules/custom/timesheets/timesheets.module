// Handles ajax RQ that is sent after input field of an hour is changed.
// Checks for permissions and either to create a new timesheet or edit an existent one.
// Sends info about execution to JS so it can style the view appropriatly 
function ajax_insta_add_timesheet($ajax = 'ajax') {
  $uid = arg(2);
  $ticket_nid = arg(3);
  $hours_spent = arg(4);
  $date = arg(5);
  $comment = 'empty';
  
  $timesheet_exists = _check_if_timesheet_exists($ticket_nid, $date);
  global $user;
  $current_roles = $user->roles;
  $access_value = get_access_admin_value($current_roles);
  if ($access_value > 0 || $user->uid == $uid) {
      $timesheet_exists = _check_if_timesheet_exists($ticket_nid, $date);
      $timehseet = node_load($timesheet_exists);
      if (!empty($timehseet)) {
        $update_timesheet = _update_timesheet($timehseet, $comment, $hours_spent);
      }
      else {
        $new_timesheet = _create_new_timesheet($uid, $ticket_nid, $hours_spent, $date, $comment);
      }
  }
  $ticket = node_load($ticket_nid);
  $project_nid = $ticket->field_project['und'][0]['nid'];
  $js_output = array('data' => $project_nid);
  
  drupal_json_output($js_output);
}
