function ajax_form_add_timesheet_form_submit($form, &$form_state ) {
  ctools_include('ajax');
  ctools_include('modal');
  ctools_modal_add_js(); 
  $commands = array();
  $validated = $form_state['values']['validated'];  
  if (!$validated) {
    $a = '<div id="ajax_form_message_wrapper"></div>' ;
    return $a; 
  }
